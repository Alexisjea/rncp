{% extends 'admin.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
{% if is_granted('ROLE_USER') %}

    <h1>Auteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Actions</th>
            </tr>
            <button class="btn btn-lg btn-primary"> <a href="{{ path('auteur_new') }}">Créer</a></button>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.firstname }}</td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">Voir</a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun resultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h1>Acces refusé vous n'est pas admin</h1>
    <p><a href="{{path('app_login')}}">Se connecter</a></p>
     {% endif %}

{% endblock %}
