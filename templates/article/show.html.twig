{% extends 'admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
{% if is_granted('ROLE_USER') %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Aperçu</th>
                <td><img width="70" src="{{ asset('img/'~article.preview) }}" alt=""></td>
            </tr>
             <tr>
                <th>Contenu</th>
                <td></td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-lg btn-primary"> <a href="{{ path('article_index') }}">Retour</a></button>   

  <button class="btn btn-lg btn-primary">  <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a></button>   

    {{ include('article/_delete_form.html.twig') }}
    {% else %}
    <h1>Acces refusé vous n'est pas admin</h1>
    <p><a href="{{path('app_login')}}">Se connecter</a></p>
     {% endif %}
{% endblock %}
